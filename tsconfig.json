{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "."
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*", "prisma/client.ts"],
  "exclude": ["node_modules"]
}
